{% extends 'food/food_wrapper.jinja' %}
{% import '/macros/food_macros.jinja' as macros %}
{% block headline %}
    <h1 class="text-center">Food </h1>
    <p class="text-center">Week: {{ day.strftime("%d.%m.%Y") }} - {{ lastday.strftime("%d.%m.%Y") }}</p>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            {{ macros.week_menu(title='Feki', location_menus=feki_menu, fail_text='Die Feki Mensa hat heute geschlossen.') }}
            {{ macros.week_menu(title='Austra√üe', location_menus=austr_menu, fail_text='Die Austr Mensa hat heute geschlossen.') }}
        </div>
        <div class="row">
            {{ macros.week_menu(title='Erba', location_menus=erba_cafete, fail_text='Aktuell gibt es keine warmen Speisen') }}
            {{ macros.week_menu(title='Markusplatz', location_menus=markus_cafete, fail_text='Aktuell gibt es keine warmen Speisen') }}
        </div>
        <div class="row">
            <div class="col p-2">
                <div class="p-3 border border-dark rounded bg-light text-dark">
                    <h2>Happy Hour Guide von Feki.de</h2>
                    {% if happy_hours %}
                        <div class="row">
                            <div class="col-4">Location</div>
                            <div class="col-4">Time</div>
                            <div class="col-4">Description</div>
                            {% for happy_hour in happy_hours %}
                                <div class="row">
                                    <div class="col-4">{{ happy_hour.location }}</div>
                                    <div class="col-4">{{ happy_hour.starttime.strftime('%H:%M') }} - {{ happy_hour.endtime.strftime('%H:%M') }}</div>
                                    <div class="col-4">{{ happy_hour.description }}</div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p>Leider gibt es heute keine Happy Hours :(</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}